<h1>{{cube.name}}</h1>
<img class="cube" src="{{cube.imageUrl}}">
<div class="details">
    <p><span>Description:</span>{{cube.description}}</p>
    <p><span>Difficulty level:</span>{{cube.difficultyLevel}}</p>
    <a class="btn" href="/">Back</a>
    <a class="btn" href="/edit/{{cube.id}}">Edit</a>
    <form action="/delete" method="POST">
        <input type="hidden" name="id" value="{{cube.id}}">
        <button class="btn-delete" type="submit">Delete</button></form>
</div>
<h2>Accessories</h2>
<div class="accessories">

    {{#each cube.accessories }}
    <div class="accessory">
        <img src="{{this.imageUrl}}" alt="stickerName">
        <h3>{{this.name}}</h3>
        <p>{{this.description}}</p>
    </div>
    {{else}}
    <h3 class="italic">This cube has no accessories yet...</h3>
    {{/each}}
</div>