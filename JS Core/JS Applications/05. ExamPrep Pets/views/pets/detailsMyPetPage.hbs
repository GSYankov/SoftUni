{{> header}}
<main id="site-content">
    <section class="detailsMyPet">
        <h3>{{myPet.name}}</h3>
        <p>Pet counter: <i class="fas fa-heart"></i> {{myPet.likes}}</p>
        <p class="img"><img src="{{myPet.imageURL}}"></p>
        <form action="#/edit/{{myPet._id}}" method="POST">
            <textarea type="text" name="description">{{myPet.description}}</textarea>
            <button class="button"> Save</button>
        </form>
    </section>
</main>
{{> footer}}