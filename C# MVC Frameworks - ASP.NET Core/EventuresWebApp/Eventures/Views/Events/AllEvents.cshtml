@model AllEventsViewModel
@{
    ViewData["Title"] = "All Events";
}

<h1 class="text-center">All Events</h1>
<hr class="hr-allevents hr-login" />
<table class="table w-75 mx-auto table-hover">
    <thead>
        <tr class="row">
            <th class="col-md-2">#</th>
            <th class="col-md-4">Name</th>
            <th class="col-md-2">Start</th>
            <th class="col-md-2">End</th>
            <th class="col-md-2">Place</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var evt in Model.AllEvents)
        {
            <tr class="row">
                <td class="col-md-2">@evt.Id</td>
                <td class="col-md-4">@evt.Name</td>
                <td class="col-md-2">@evt.Start</td>
                <td class="col-md-2">@evt.End</td>
                <td class="col-md-2">@evt.Place</td>
            </tr>
        }
    </tbody>
</table>
<hr class="hr-allevents hr-login" />
